# Environment Variables for Lunar Soil Analysis

# OpenAI API Key (for LLM integration)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional, for Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Weights & Biases API Key (for experiment tracking)
WANDB_API_KEY=your_wandb_api_key_here

# MLflow Tracking URI (optional)
MLFLOW_TRACKING_URI=http://localhost:5000

# Database Configuration (for vector database)
VECTOR_DB_PATH=datasets/vector_db

# Model Paths
MODEL_CHECKPOINT_PATH=models/checkpoints
MODEL_SAVE_PATH=models/saved_models

# Data Paths
RAW_DATA_PATH=datasets/raw
PROCESSED_DATA_PATH=datasets/processed

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/lunar_analysis.log

# CUDA Settings
CUDA_VISIBLE_DEVICES=0
